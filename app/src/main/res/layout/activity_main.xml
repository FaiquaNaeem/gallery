<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginVertical="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="41dp"
            android:layout_height="100dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GALLERY"
            android:textStyle="italic"
            android:layout_marginHorizontal="75dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="47dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_marginVertical="0dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="140dp"
            android:src="@drawable/bacteriaselfie"
            android:layout_height="wrap_content"
            ></ImageView>

        <ImageView
            android:layout_width="140dp"
            android:src="@drawable/asthetic"
            android:layout_height="150dp"></ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:src="@drawable/kedarnath"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginVertical="0dp"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="140dp"
            android:src="@drawable/productive"
            android:layout_height="wrap_content"></ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:src="@drawable/moon2"></ImageView>

        <ImageView
            android:layout_width="140dp"
            android:src="@drawable/nizamud"
            android:layout_height="wrap_content"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginVertical="0dp">

        <ImageView
            android:layout_width="140dp"
            android:src="@drawable/cheese"
            android:layout_height="wrap_content"></ImageView>
        <ImageView
            android:layout_width="140dp"
            android:src="@drawable/flower"
            android:layout_height="wrap_content"></ImageView>

        <ImageView
            android:layout_width="140dp"
            android:src="@drawable/banglasahib"
            android:layout_height="wrap_content"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_marginVertical="0dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="140dp"
            android:src="@drawable/diya_machis"
            android:layout_height="wrap_content"
            ></ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:src="@drawable/cityside"></ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:src="@drawable/church"></ImageView>
    </LinearLayout>


</LinearLayout>










